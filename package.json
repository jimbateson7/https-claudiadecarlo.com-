{
  "scripts": {
    "start": "npm-run-all --parallel css eleventy browsersync",
    "eleventy": "eleventy --watch --no-incremental",
    "debug": "set DEBUG=* & eleventy",
    "css": "postcss src/static/css/tailwind.css --o _site/static/css/style.css --watch",
    "build": "cross-env NODE_ENV=production postcss src/static/css/tailwind.css --o _site/static/css/style.css && eleventy",
    "browsersync": "browser-sync start --server _site --files '_site/**/*.html,_site/**/*.js,_site/**/*.css' --port 8080 --no-notify --no-open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
    "@tailwindcss/typography": "^0.5.0",
    "alpinejs": "^3.7.1",
    "browser-sync": "^3.0.4",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "esbuild": "0.25.5",
    "js-yaml": "^4.1.0",
    "luxon": "^3.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "prismjs": "^1.26.0"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@splidejs/splide": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.8",
    "autoprefixer": "^10.4.2",
    "gsap": "^3.13.0",
    "markdown-it": "^14.1.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  }
}
